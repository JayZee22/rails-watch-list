<div class="d-block p-2 bg-dark text-white">
  <h1>All Lists</h1>

  <div class="card-deck">
    <% @lists.each do |list| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to list.name, list_path(list), class: "text-dark" %></h5>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'Create a movie List', lists_new_path, class: 'btn btn-primary mt-3' %>
</div>
