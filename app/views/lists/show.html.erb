<h1>List Details</h1>

<h3><%= @list.name %> List</h3>

<!-- Display list details here -->

<%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<!-- Display all bookmarks here -->
<div class="bookmark-list">
  <h4>Bookmarks</h4>
  <ul class="list-group"> <% raise %>
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <%= bookmark.comment %>
        <%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm float-end" %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'Back to Lists', lists_path, class: "btn btn-secondary mt-3" %>
